<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <androidx.camera.view.PreviewView
        android:id="@+id/preview"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:focusableInTouchMode="true"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <LinearLayout
        android:id="@+id/topBar"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="8dp"
        android:background="#50000000"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="end"
            android:layout_marginTop="24dp">

            <ImageButton
                android:id="@+id/btn_volume"
                android:layout_width="36dp"
                android:layout_height="36dp"
                android:contentDescription="@string/volume_toggle"
                android:src="@drawable/ic_volume_on"
                app:tint="@android:color/white"
                android:background="?attr/selectableItemBackgroundBorderless"
                android:layout_marginEnd="16dp" />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:gravity="center_horizontal">

                <ImageButton
                    android:id="@+id/btn_settings"
                    android:layout_width="36dp"
                    android:layout_height="36dp"
                    android:contentDescription="@string/settings_dialog_title"
                    android:src="@drawable/ic_settings"
                    app:tint="@android:color/white"
                    android:background="?attr/selectableItemBackgroundBorderless" />

                <TextView
                    android:id="@+id/label_modeInfo"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="AUTO"
                    android:textColor="@android:color/holo_red_light"
                    android:textSize="12sp"
                    android:textStyle="bold"
                    android:layout_marginTop="4dp" />
            </LinearLayout>
        </LinearLayout>

        <TextView
            android:id="@+id/label_elapsedTime"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Elapsed time:"
            android:textColor="@android:color/white"
            android:textSize="16sp"
            android:layout_marginTop="4dp"/>

        <TextView
            android:id="@+id/label_photosTaken"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Number of photos:"
            android:textColor="@android:color/white"
            android:textSize="16sp"
            android:layout_marginTop="4dp"/>

        <TextView
            android:id="@+id/label_sessionTime"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Remaining time:"
            android:textColor="@android:color/white"
            android:textSize="16sp"
            android:layout_marginTop="4dp"/>
    </LinearLayout>

    <ProgressBar
        android:id="@+id/progressBar_shutterBtn"
        style="@android:style/Widget.DeviceDefault.Light.ProgressBar.Horizontal"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:indeterminate="false"
        android:max="100"
        android:progressDrawable="@drawable/progress_circular_drawable"
        android:visibility="gone"
        app:layout_constraintBottom_toBottomOf="@id/bottomBar"
        app:layout_constraintEnd_toEndOf="@id/bottomBar"
        app:layout_constraintStart_toStartOf="@id/bottomBar"
        app:layout_constraintTop_toTopOf="@id/bottomBar"
        android:layout_marginBottom="40dp"/>

    <LinearLayout
        android:id="@+id/bottomBar"
        android:layout_width="0dp"
        android:layout_height="140dp"
        android:orientation="horizontal"
        android:gravity="center"
        android:background="#50000000"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:padding="8dp">

    <ImageButton
        android:id="@+id/btn_cancel"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:background="@drawable/ic_close"
        android:contentDescription="@string/cancel_button_label"
        android:layout_marginEnd="50dp"
        android:layout_marginBottom="20dp" />

    <ImageButton
        android:id="@+id/btn_shutter"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:background="@drawable/selector_button_shutter"
        android:contentDescription="@string/shutter_button_description_text"
        android:layout_marginStart="24dp"
        android:layout_marginEnd="24dp"
        android:layout_marginBottom="20dp" />

    <ImageButton
        android:id="@+id/btn_savePhotos"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:background="@drawable/ic_save"
        android:contentDescription="@string/save_dialog_button"
        android:layout_marginStart="50dp"
        android:layout_marginBottom="20dp" />

    </LinearLayout>

    <View
        android:id="@+id/shutter_effect_view"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#80000000"
        android:visibility="gone" />
</androidx.constraintlayout.widget.ConstraintLayout>