<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:id="@android:id/background">
        <shape android:shape="ring" android:innerRadiusRatio="3" android:thickness="5dp">
            <solid android:color="#DDDDDD" />
            <stroke android:width="0dp" android:color="#DDDDDD"/>
        </shape>
    </item>

    <item android:id="@android:id/progress">
        <shape android:shape="ring" android:innerRadiusRatio="3" android:thickness="10dp">
            <solid android:color="#FF0000" />
            <stroke android:width="0dp" android:color="#FF0000"/>
        </shape>
    </item>
</layer-list>
